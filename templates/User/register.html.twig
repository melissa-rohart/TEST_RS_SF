{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-3 col-sm-3 col-md-3 col-lg-3 col-xl-3"></div>
            <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                {{ form_start(form) }}

					<div class="form-group">
						<label>Pr√©nom</label>
                        {{ form_widget(form.firstname, { 'attr': {'class': 'form-control'}}) }}
						<div class="error_form">{{ form_errors(form.firstname) }}</div>
					</div>

					<div class="form-group">
						<label>Nom</label>
                        {{ form_widget(form.lastname, { 'attr': {'class': 'form-control'}}) }}
						<div class="error_form">{{ form_errors(form.lastname) }}</div>
					</div>

			    	<div class="form-group">
			    		<label>Email</label>
						{{ form_widget(form.username, { 'attr': {'class': 'form-control'}}) }}
						<div class="error_form">{{ form_errors(form.username) }}</div>
					</div>

					<div class="form-group">
			    		<label>Mot de passe</label>
						{{ form_widget(form.password.first, { 'attr': {'class': 'form-control'}}) }}
						<div class="error_form">{{ form_errors(form.password.first) }}</div>
					</div>

					<div class="form-group">
			    		<label>Confirmation du mot de passe</label>
						{{ form_widget(form.password.second, { 'attr': {'class': 'form-control'}}) }}
						<div class="error_form">{{ form_errors(form.password.second) }}</div>
					</div>

					<div class="form-group">
						<button type="submit" class="btn btn-primary">Inscription</button>
					</div>

					{{ form_end(form) }}
                </div>
            <div class="col-3 col-sm-3 col-md-3 col-lg-3 col-xl-3"></div>
        </div>

{% endblock %}